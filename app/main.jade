//output:main.html
include bemto/bemto

mixin gettpl(file)
  -
    var j=process.mainModule.require('/usr/lib/node_modules/jade');
    var path=process.mainModule.require('path');
    var f=j.compileFile(path.join(path.dirname(filename),file),{pretty:true});
    var html=f({});
  script(type="text/ng-template",id="#{file}")!= html

mixin ngs(file)
  script(type="text/ng-template",id="#{file}")
    block
  
doctype
html
  head
    base(target="_top")
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible",content="ie=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")
    link(rel="stylesheet",href="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.amber-indigo.min.css")
    link(rel="stylesheet",href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,cyrillic,cyrillic-ext',rel='stylesheet',type='text/css')
    script(src="https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js")
    style(type="text/css")
      include main.css
  body(ng-app="oAccount")
    +ngs("modal.jade")
      include modal.jade
    +b.workarea(ng-controller="oOutcomes as ctl")
      +b.drawer.__drawer.mdl-shadow--2dp.ng-hide(o-drawer,ng-show="drawer.show")
        +e.props(ng-click="showDateInput=true")
          +b.prop.ng-hide(ng-show!="totalRedSum>0")
            +e.SPAN.name Расход
            +e.SPAN.value_big-red(ng-bind="totalRedSum")
          +b.prop.ng-hide(ng-show!="totalGreeSum>0")
            +e.SPAN.name Доход
            +e.SPAN.value_big-green(ng-bind="totalGreeSum")
          +b.prop.ng-hide(ng-show="showDateInput")
            input(type="date",ng-model="operationDate")
        +e.controls
          button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored.mdl-js-ripple-effect(o-mdl,ng-click!="ctl.checkOut()") CHECKOUT
          button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--accent.mdl-js-ripple-effect(o-mdl,ng-click!="ctl.clearAllAmount()") CLEAR
      +e.controls
        +e.BUTTON.control.mdl-button.mdl-js-button.mdl-button--colored.mdl-button--accent.mdl-js-ripple-effect(o-mdl,ng-repeat="nextRoute in stageRoutes track by nextRoute.id ",ng-click!="state.stage=nextRoute.id")
          span(ng-bind="nextRoute.name")
      +b.layout
        +b.categories.__categories(ng-repeat="route in stageRoutes track by route.id",ng-if="state.stage==route.id")
          +b.category.__category.mdl-card.mdl-shadow--2dp(o-mdl,ng-repeat="category in cardsBox[state.stage] track by category.id")
            div.mdl-card__title(ng-style="{'background-image':'url({{category.image}})'}")
              h1.mdl-card__title-text(ng-bind="category.name")
            div.mdl-card__supporting-text
              +b.prop.__prop.ng-hide(ng-show!="category.current!=0")
                +e.SPAN.name Отчет
                +e.SPAN.value(ng-bind="category.current",ng-class="{'prop__value_green':category.type==1,'prop__value_red':category.type==-1}")
              +b.prop.__prop.ng-hide(ng-show!="category.amount>0")
                +e.SPAN.name Расчет
                +e.SPAN.value(ng-bind="category.amount",ng-class="{'prop__value_green':category.type==1,'prop__value_red':category.type==-1}")
            div.mdl-card__actions
              div.mdl-textfield.mdl-js-textfield(o-mdl)
                input.mdl-textfield__input(type="number",id="category.id",ng-model="amount")
                label.mdl-textfield__label(for="category.id") Amount
              +e.BUTTON.clear.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--accent.mdl-js-ripple-effect.ng-hide(o-mdl,ng-show!="category.amount>0",ng-click!="ctl.clearAmount(category);amount=''") CLEAR
              +e.BUTTON.spend.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored.mdl-js-ripple-effect(o-mdl,ng-click!="ctl.addAmount(category,amount);amount=''") ADD
    o-view
    +b.shutter(ng-hide="!(shutter.loading||shutter.show)")
      +b.message.__message
        +e.spinner.mdl-spinner.mdl-js-spinner(ng-class="{'is-active':shutter.loading}")
        +e.text(ng-bind="shutter.message.text",ng-class="{'message__text_error':shutter.message.isError}")
        +e.controls.ng-hide(ng-show="!shutter.loading")
          button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored.mdl-js-ripple-effect(ng-click!="shutter.show=false") OK
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.2/angular-animate.js")
    script(type="text/javascript")
      include main.js
      
